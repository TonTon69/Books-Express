extends ../layouts/common
block content
    .d-flex.align-items-center.justify-content-between
        h1 Create Book
        a(href="/shop/stored/books") My books
    form(action="/books/create", method="post")
        .form-group
            label(for="name") Name
            input#name(type="text", name="name", class="form-control") 
        .form-group
            label(for="image") Image
            input#image(type="text", name="image", class="form-control") 
        .form-group
            label(for="description") Description
            textarea#description(type="text", name="description", class="form-control")  
        .form-group
            label(for="price_old") Price Old
            input#price_old(type="text", name="price_old", class="form-control") 
        .form-group
            label(for="price_new") Price New
            input#price_new(type="text", name="price_new", class="form-control") 
        //- .form-group
        //-     label(for="author") Author
        //-     input#author(type="text", name="author", class="form-control") 
        .form-group
            label(for="type") Type
            input#type(type="text", name="type", class="form-control") 
        button.btn.btn-primary.btn-sign-in Create