extends ../layouts/common
block content
    .d-flex.align-items-center.justify-content-between
        h1 Create Book
        a(href="/shop/stored/books") My books
    form(action="/books/create", method="post")
        .form-group
            label(for="name") Name
            input#name(type="text", name="name", class="form-control" required) 
        .form-group
            label(for="image") Image
            input#image(type="text", name="image", class="form-control" required) 
        .form-group
            label(for="description") Description
            textarea#description(type="text", name="description", class="form-control" required)  
        .form-group
            label(for="price_old") Price Old
            input#price_old(type="text", name="price_old", class="form-control" required) 
        .form-group
            label(for="price_new") Price New
            input#price_new(type="text", name="price_new", class="form-control" required) 
        .input-group.mb-3
            .input-group-prepend
                label.input-group-text(for='author') Author
            select#author.custom-select
                each author in authors
                    if author.id === book.author
                        option(value=author.id selected)
                            label=author.name
                    else
                        option(value=author.id)
                            label=author.name
        .form-group
            label(for="type") Type
            input#type(type="text", name="type", class="form-control" required) 
        button.btn.btn-primary.btn-submit Create