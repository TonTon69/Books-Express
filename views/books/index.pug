extends ../layouts/common
block content
    h1
        span.mr-3 Books
        a.btn.btn-primary(href="/books/create") New
    .d-flex.align-items-center
        form.d-flex.ml-auto(action="/books/search", method="get")
            input(type="text", name="q", class="form-control")
            button(class="btn btn-primary ml-2") Search

    each book in books
        .card(style='width: 18rem;')
            img.card-img-top(src=book.image, alt='Card image cap')
            .card-body
                h5.card-title=book.name
                p.card-text=book.description
                a.btn.btn-primary(href='#') Buy now