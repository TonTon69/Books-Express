extends ../layouts/common
block content
    h1
        span.mr-3 Books
        a.btn.btn-primary(href="/books/create") New
    .d-flex.align-items-center
        form.d-flex.ml-auto(action="/books/search", method="get")
            input(type="text", placeholder="Search...", name="name", class="form-control")
            button(class="btn btn-primary ml-2") Search
  
    .row
        each book in books
            .card.mb-5.mr-4(style='width: 22rem')
                a(href="/books/" + book.slug)
                    img.card-img-top(src=book.image)
                .card-body
                    a.text-dark(href="/books/" + book.slug)
                        h5.card-title=book.name
                    p.card-text=book.description
                    a.btn.btn-primary(href='#') Buy now