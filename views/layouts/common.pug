html
    head
        title BookHouse #{title}
        link(rel="shortcut icon", href="/images/open-book.svg")
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
        link(rel="stylesheet", href="/styles/app.css")
        script(src="https://kit.fontawesome.com/64d58efce2.js", crossorigin="anonymous")
        script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js', integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx', crossorigin='anonymous')
    body
        .app
            block navbar_home           
            block index
                nav.navbar.navbar-expand-lg.navbar-transparent.justify-content-between.nav-app.position-sticky
                    a.navbar-brand(href='/') 
                        span(style="color: #fb5533") Book
                        span.text-light House
                    .navbar-nav(style="text-transform: uppercase")
                        a.nav-item.nav-link.text-light.mr-5(href='/') Home 
                        a.nav-item.nav-link.text-light.mr-5(href='/books') Books
                        a.nav-item.nav-link.text-light.mr-5(href='/') Contact
                    if user 
                        .user.d-flex.align-items-center
                            p.m-0.mr-3.text-light= user.name
                            img(src=user.avatar, style="width: 35px; height: 35px; border-radius: 50%; object-fit: cover")
                            .user-menu
                                if user.role
                                    a.text-dark(href="/books/create") 
                                        i.fas.fa-plus.mr-3
                                        span Create book
                                    a.text-dark(href="/shop/stored/books") 
                                        i.fas.fa-list.mr-3
                                        span My books
                                    a.text-dark(href="/shop/stored/users") 
                                        i.fas.fa-users.mr-3
                                        span My Users
                                    a.text-dark(href="") 
                                        i.fas.fa-cog.mr-3
                                        span Settings
                                    a.text-dark(href="/auth/logout") 
                                        i.fas.fa-sign-out-alt.mr-3
                                        span Log out
                                else
                                    a.text-dark(href="") 
                                        i.fas.fa-cog.mr-3
                                        span Settings
                                    a.text-dark(href="/auth/logout") 
                                        i.fas.fa-sign-out-alt.mr-3
                                        span Log out
                    else
                        .navbar-nav
                            a.nav-item.nav-link.text-light(href='/auth/signin') Sign in
                            a.nav-item.nav-link.text-light(href='/users/signup') Sign up
                            
                .container.pb-5.mt-5.mb-5.p-0
                    block content

            footer.container-fluid(style="background-color: #fff2f2")             
                .footer.container.d-flex.justify-content-center.text-center(style="padding: 6rem 0")
                    .footer-subscribe
                        h4(style="color: #753820; font-weight: 700") Subscribe to newslater
                        .position-relative.mt-4
                            form 
                                input(type="text", placeholder="You@example.com")
                                button(type="submit", style="font-weight: 600") Subscribe
                hr
                .container.p-0
                    .row(style="padding: 6rem 0 10rem 0")
                        .col-lg-4.p-0
                            a.navbar-brand(href='#') 
                                span(style="color: #fb5533") Book
                                span.text-dark House
                            #navbardrop.nav-link.dropdown-toggle.d-flex.mt-3(href='#', data-toggle='dropdown', style="cursor: pointer") 
                                img.mr-2(style="width: 20px", src="data:image/svg+xml;base64,")
                                span English
                                .dropdown-menu
                                    a.dropdown-item.d-flex.align-items-center.pt-2.pb-2(href='#section41', style="color: #743820") 
                                        img.mr-1(src="data:image/svg+xml;base64,", style="width: 20px")
                                        span Vietnamese
                                    a.dropdown-item.d-flex.align-items-center.pt-2.pb-2(href='#section42', style="color: #743820") 
                                        img.mr-1(src="data:image/svg+xml;base64,", style="width: 20px")
                                        span English
                        .col-lg-2.footer-text
                            span.mb-4 Home
                            .mt-4
                                a(href="#") Books
                        .col-lg-2.footer-text
                            span.mb-4 Shop by
                            .mt-4
                                a(href="#") BookHouse
                        .col-lg-2.footer-text
                            span.mb-4 Products
                            .mt-4(style="display: grid")
                                a(href="#") Brands
                                a.mt-2(href="#") Authors
                                a.mt-2(href="#") Reviews
                        .col-lg-2.footer-text
                            span.mb-4 Support
                            .mt-4(style="display: grid")
                                a(href="#") Contact Us
                                a.mt-2(href="#") Find My Product
                                a.mt-2(href="#") FAQ
        
        script(type="text/javascript", src="/js/main.min.js")
            