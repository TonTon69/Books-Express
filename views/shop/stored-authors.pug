extends ../layouts/common
block content
    h1.mb-5 Authors
    table.table
        tr
            th Name
            th Birthday
            th Address
            th Created At
            th Actions
            th
        each author in authors
            tr
                td=author.name
                td=author.birthday
                td=author.address
                td=author.createdAt
                td
                    a.btn.btn-light(href="/authors/" + author.slug) View
                td
                    a.btn.btn-link(href="/authors/" + author._id + "/edit") Edit
                    a.btn.btn-link(href='', data-toggle='modal', data-id=author._id, data-target='#delete-author-modal') Delete
        else
            .d-flex.align-items-center.justify-content-center
                span You don't have any author?
                a.btn.btn-link(href="/authors/create") Create author
    .modal#delete-author-modal(tabindex='-1', role='dialog')
        .modal-dialog(role='document')
            .modal-content
                .modal-header
                    h5.modal-title Delete author???
                    button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') &times;
                .modal-body
                    p Are you sure you want to delete this author?
                .modal-footer
                    button#btn-delete-author.btn.btn-danger(type='button') Delete
                    button.btn.btn-secondary(type='button', data-dismiss='modal') Cancel
        
    //- Delete hidden form
    form(method="POST", name="delete-author-form")
        
